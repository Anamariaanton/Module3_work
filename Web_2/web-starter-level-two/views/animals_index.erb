<h1 style="text-align: center;">Lost Cats!</h1>

<p style="text-align:center;">
  <a href="/animals/new">Post your advert here!</a>
</p>

<% if animals.empty? %>
  There are currently no missing animals.
<% else %>
  <% animals.each_with_index do |animal, index| %>
    <section>
      <h1 style="text-align: center;">Lost cat information</h1>
      <h5>Species: <%= animal.species %></h5>
      <h5>Cat name: <%= animal.animal_name %></h5>
      <h5>Cat colour: <%= animal.animal_colour %></h5>
      <h5>Cat size: <%= animal.animal_size %></h5>

      <h1 style="text-align: center;">Owners information</h1>
      <h5>Owners name: <%= animal.owners_name %></h5>
      <h5>Owners Contact number: <%= animal.owners_number %></h5>

      <p>
        <a href="/animals/<%= index %>/found">
          <button>Found <%= animal %></button>
        </a>
      </p>

      <p>
        <a href="/animals/<%= index %>/edit">
          <button>Edit <%= animal %></button>
        </a>
      </p>

      <form action="/animals/<%= index %>" method="POST">
        <%#
          This hidden input is necessary for Sinatrato recognise
          this as a DELETE request.
        %>
        <input type="hidden" name="_method" value="DELETE">
        <button>Delete <%= animal %></button>
      </form>
    </section>
  <% end %>
<% end %>


